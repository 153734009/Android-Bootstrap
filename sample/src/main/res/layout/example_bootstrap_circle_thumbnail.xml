<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    style="@style/example_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <!-- TODO remove this view -->
    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/author_small"
        />




    <TextView
        style="@style/description_label"
        android:text="Tap to Change Image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/bcircle_image_change_example"
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/ladybird"
        />

    <!-- TODO remove -->
    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ladybird"
        />

    <TextView
        style="@style/description_label"
        android:text="Tap to Change Color"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/bcircle_color_change_example"
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/flower"
        app:borderWidth="4dp"
        />

    <TextView
        style="@style/description_label"
        android:text="Tap to Change Theme"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/bcircle_theme_change_example"
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/small_daffodils"
        app:bootstrapBrand="success"
        app:borderWidth="4dp"
        />

    <TextView
        style="@style/description_label"
        android:text="Tap to Change Border Width"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/bcircle_border_change_example"
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/stars"
        app:bootstrapBrand="primary"
        app:borderWidth="0dp"
        />


    <!-- TODO test cases. Need to include Wrap_content (broken) and match_parent -->


    <TextView
        style="@style/description_label"
        android:text="Square Image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/perfect_square"
        />

    <TextView
        style="@style/description_label"
        android:text="Portrait Image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/portrait_image"
        />

    <TextView
        style="@style/description_label"
        android:text="Landscape Image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="@dimen/default_circle_size"
        android:layout_height="@dimen/default_circle_size"
        android:src="@drawable/landscape_image"
        />

    <TextView
        style="@style/description_label"
        android:text="Fitting image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/author"
        />

    <TextView
        style="@style/description_label"
        android:text="Stretched image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/author_small"
        />

    <TextView
        style="@style/description_label"
        android:text="Alpha image"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/alpha"
        app:bootstrapBrand="success"
        app:borderWidth="3dp"
        />


    <TextView
        style="@style/description_label"
        android:text="Wrap Content"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/author_small"
        />

    <TextView
        style="@style/description_label"
        android:text="Empty View"
        />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <!-- Invisible -->
    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>