<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/example_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapProgressBarGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapSize="lg"
        app:bootstrapMaxProgress="60"
        app:roundedCorners="true">

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:bootstrapBrand="success"
            app:bootstrapProgress="20"
            app:bootstrapSize="md"
            app:striped="true"
            />

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:bootstrapBrand="success"
            app:bootstrapProgress="20"
            app:bootstrapSize="md"
            />

    </com.beardedhen.androidbootstrap.BootstrapProgressBarGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sample_progress_bar_group_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add something"/>

        <com.beardedhen.androidbootstrap.BootstrapProgressBarGroup
            android:id="@+id/sample_progress_bar_group_add_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:bootstrapSize="md"
            app:bootstrapMaxProgress="100">

            <com.beardedhen.androidbootstrap.BootstrapProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:bootstrapBrand="success"
                app:bootstrapProgress="20"
                app:bootstrapSize="md"
                app:striped="true"
                />

            <com.beardedhen.androidbootstrap.BootstrapProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:bootstrapBrand="warning"
                app:bootstrapProgress="20"
                app:bootstrapSize="md"
                />

        </com.beardedhen.androidbootstrap.BootstrapProgressBarGroup>
    </LinearLayout>


</LinearLayout>